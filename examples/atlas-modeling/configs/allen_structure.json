{
  "name": "Using the Allen Atlas and a density file to place cells",
  "storage": {
    "engine": "hdf5",
    "root": "allen_densities.hdf5"
  },
  "network": {
    "x": 13200,
    "y": 8000,
    "z": 11400,
    "chunk_size": 250
  },
  "files": {
    "my_cell_density":
      {
        "type": "nrrd",
        "file": "data/my_cell_density.nrrd"
      }
  },
  "regions": {
    "brain": {"children": ["declive"]}
  },
  "partitions": {
    "declive": {
      "type": "allen",
      "sources": [
        "my_cell_density"
      ],
      "struct_name": "DEC"
    }
  },
  "cell_types": {
    "my_cell": {
      "spatial": {
        "radius": 2.5,
        "density": 0.003
      }
    },
    "my_other_cell": {
      "spatial": {
        "radius": 2.5,
        "density_key": "my_cell_density"
      }
    }
  },
  "placement": {
    "example_placement": {
      "strategy": "bsb.placement.RandomPlacement",
      "cell_types": [
        "my_cell",
        "my_other_cell"
      ],
      "partitions": ["declive"]
    }
  },
  "connectivity": {}
}
