{
  "name": "bsb-core",
  "$schema": "../../.nx/installation/node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/bsb-core/bsb",
  "targets": {
    "lock": {
      "executor": "@nxlv/python:lock",
      "options": {
        "update": false
      }
    },
    "sync": {
      "executor": "@nxlv/python:sync",
      "options": {}
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "publish": true,
        "lockedVersions": false,
        "bundleLocalDependencies": false
      },
      "cache": true
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": [],
      "options": {
        "lintFilePatterns": ["bsb", "tests"]
      },
      "cache": true
    },
    "format": {
      "executor": "@nxlv/python:ruff-format",
      "outputs": [],
      "options": {
        "filePatterns": ["bsb", "tests"]
      },
      "cache": true
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "commands": [
          "npx -y rimraf .coverage*",
          "uv run coverage run -p -m unittest discover -v -s ./tests -t .",
          "mpiexec -n 2 uv run coverage run -p -m unittest discover -v -s ./tests -t .",
          "uv run coverage combine",
          "uv run coverage xml -i -o ../../coverage/packages/bsb-core/coverage.xml",
          "uv run coverage html -i -d ../../coverage/packages/bsb-core/html"
        ],
        "parallel": false,
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "iso-docs": {
      "executor": "@nxlv/python:run-commands",
      "outputs": ["{projectRoot}/docs/_build/iso-html"],
      "options": {
        "commands": [
          "npx -y rimraf _build/iso-html/",
          "uv run sphinx-build -v -b html . _build/iso-html"
        ],
        "parallel": false,
        "cwd": "{projectRoot}/docs/"
      },
      "cache": true
    },
    "docs": {
      "dependsOn": ["bsb:iso-docs"],
      "executor": "@nxlv/python:run-commands",
      "outputs": ["{projectRoot}/docs/_build/html"],
      "options": {
        "commands": [
          "npx -y rimraf _build/html/",
          "npx -y cross-env BSB_LOCAL_INTERSPHINX_ONLY=true uv run sphinx-build -nW -b html . _build/html"
        ],
        "parallel": false,
        "cwd": "{projectRoot}/docs/"
      },
      "cache": true
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "verbose": false,
        "debug": false
      }
    },
    "check-api": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "commands": ["uv run tools/generate_public_api.py --check"],
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "nx-release-publish": {
      "executor": "@nxlv/python:publish",
      "options": {},
      "outputs": []
    }
  },
  "tags": [],
  "release": {
    "version": {
      "generator": "@nxlv/python:release-version"
    }
  }
}
